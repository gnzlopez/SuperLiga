

<div class="card w-25 mt-5">
    <div class="card-body">
        <h5 class="card-title text-center text-uppercase">SuperLiga Challenge</h5>
        <p class="card-text"></p>

        <div>
             <hr /> <br />
            @using (Html.BeginForm("ProcessFile", "Home",
            FormMethod.Post,
            new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <div class="col-md-12 text-center mb-5" height="120px">
                        <input type="file" name="file" id="file" class="inputfile" />
                        <label for="file" class="btn btn-primary rounded-circle btn-file p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-bar-up align-top" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 10a.5.5 0 0 0 .5-.5V3.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 3.707V9.5a.5.5 0 0 0 .5.5zm-7 2.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13a.5.5 0 0 1-.5-.5z" />
                            </svg>
                        </label> <br />
                        <label class="m-auto" id="fileText">Seleccione un archivo</label>
                    </div>
                    <hr />
                    <div class="col-md-12 text-center mt-lg-5">
                        <input type="submit" value="Cargar" class="btn btn-secondary btn-savefile" />
                    </div>
                </div>
            }
            <div class="text-center text-danger">
                @ViewBag.ErrorMessage
            </div>
        </div>
    </div>

</div>

@section Scripts 
    {
    <script>
        var input = document.querySelector('.inputfile');
        var label = document.querySelector('#fileText'),
            labelVal = label.innerHTML;

            input.addEventListener('change', function (e) {
                var fileName = '';
                    fileName = e.target.value.split('\\').pop();

		        if (fileName)
                            label.innerHTML = fileName;
                        else
                            label.innerHTML = labelVal;
            });

    </script>
    }